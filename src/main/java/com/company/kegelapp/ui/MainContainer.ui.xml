<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xdevuiml version="1.0"?>
<?template NONE?>
<?import com.rapidclipse.framework.server.ui.navigation.NavigationSideBar?>
<?import com.vaadin.flow.component.button.Button?>
<?import com.vaadin.flow.component.orderedlayout.HorizontalLayout?>
<?import com.vaadin.flow.component.orderedlayout.VerticalLayout?>
<VerticalLayout xmlns:x="http://xml.xdev-software.com/xdevuiml" spacing="false" x:name="MainContainer" padding="false" defaultHorizontalComponentAlignment="com.vaadin.flow.component.orderedlayout.FlexComponent.Alignment.STRETCH" x:routerLayout="true">
    <x:constraints zpos="0" width="100%" height="100%" />
    <HorizontalLayout className="my-header" spacing="false" x:name="headerContainer">
        <x:constraints width="100%" alignment="CENTER" height="-1px" flex-grow="0.0" />
        <Button x:name="button" text="FEUCHTE PUDEL">
            <x:constraints width="0px" alignment="CENTER" height="0px" flex-grow="0.0" />
            <x:event>click.onComponentEvent</x:event>
        </Button>
    </HorizontalLayout>
    <HorizontalLayout minHeight="0" spacing="false" x:name="contentParentContainer" defaultVerticalComponentAlignment="com.vaadin.flow.component.orderedlayout.FlexComponent.Alignment.STRETCH">
        <x:constraints width="0px" height="0px" flex-grow="1.0" />
        <NavigationSideBar className="my-custom-navsidebar" x:name="navigationSideBar" x:scrollbars="com.rapidclipse.vaadin.editor.model.ScrollbarsPolicy.VERTICAL" minWidth="200px">
            <x:constraints width="-1px" height="-1px" flex-grow="0.0" />
        </NavigationSideBar>
        <VerticalLayout minHeight="0" spacing="false" x:name="contentContainer" x:scrollbars="com.rapidclipse.vaadin.editor.model.ScrollbarsPolicy.VERTICAL" padding="false" defaultHorizontalComponentAlignment="com.vaadin.flow.component.orderedlayout.FlexComponent.Alignment.STRETCH">
            <x:constraints width="-1px" alignment="STRETCH" height="-1px" flex-grow="1.0" />
        </VerticalLayout>
    </HorizontalLayout>
</VerticalLayout>
